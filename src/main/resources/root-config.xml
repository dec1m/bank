<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

        <import resource="classpath:db/datasource.xml"/>
        <import resource="classpath:db/hibernate-datasource.xml"/>


    <bean id="clientDaoJdbcTemplate" class="com.trach.bank.dao.ClientDaoJdbcTemplate">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    <bean id="clientDaoHibernate" class="com.trach.bank.dao.ClientDaoHibernate">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <bean id="clientService" class="com.trach.bank.services.ClientService" depends-on="clientDaoHibernate">
    <property name="clientDao" ref="clientDaoHibernate"/>
    </bean>
</beans>